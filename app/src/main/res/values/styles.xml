<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="profile_text" parent="text">
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="profile_text_count" parent="text">
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/whiteish</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="toolbar_image">
        <item name="android:layout_width">@dimen/toolbar_height</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:padding">@dimen/toolbar_image_padding</item>
    </style>

    <style name="toolbar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="toolbar_text" parent="toolbar_title">
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:paddingStart">@dimen/toolbar_image_padding</item>
        <item name="android:paddingEnd">@dimen/toolbar_image_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="edit_profile_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edit_profile_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/divider_s</item>
        <item name="android:layout_marginTop">@dimen/divider_m</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="login_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/divider_m</item>
        <item name="android:background">@drawable/login_et_bg</item>
        <item name="android:padding">@dimen/divider_s</item>
    </style>

    <style name="login_btn" parent="login_et">
        <item name="android:background">@drawable/login_btn_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/login_btn_color</item>
        <item name="android:stateListAnimator">@animator/login_btn_animator</item>
    </style>
</resources>
